{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "jsx": "preserve",
    "incremental": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    // Key additions for your setup:
    "allowJs": true,                    // allow importing JS files
    "allowArbitraryExtensions": true,   // allow .mjs, .css, etc. in imports (TS >= 5.2)
    "allowImportingTsExtensions": true, // allow importing with explicit .ts/.tsx extension when needed
    "verbatimModuleSyntax": true,       // recommended with bundler resolution
    "checkJs": false,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "dist"]
}
