     ]
    },
    "Description": "Guardrails for prod preventing legacy Amplify Classic and wildcard IAM.",
    "Name": "scp-prod",
    "TargetIds": [
     {
      "Fn::GetAtt": [
       "PRODOu",
       "Id"
      ]
     }
    ],
    "Type": "SERVICE_CONTROL_POLICY"
   },
   "Metadata": {
    "aws:cdk:path": "RastupOrganization/prodGuardrails"
   }
  },
  "CDKMetadata": {
   "Type": "AWS::CDK::Metadata",
   "Properties": {
    "Analytics": "v2:deflate64:H4sIAAAAAAAA/02NQQ6CQAwA3+J9t5D6BB6AwXA2dQFTWLuEdiVK+LshXjzNZC6DgOcSyhOt6kM3+ch32K5GYXK06i0tDxL+kHESha0apP4rFFthc9UglxQ5vPdD62xztt1J6noYtXghAh6LUZn9ksX42UPz4xd5isv1fwAAAA=="
   },
   "Metadata": {
    "aws:cdk:path": "RastupOrganization/CDKMetadata/Default"
   }
  }
 },
 "Outputs": {
  "devOuId": {
   "Description": "Organizational Unit ID for dev",
   "Value": {
    "Fn::GetAtt": [
     "DEVOu",
     "Id"
    ]
   }
  },
  "stageOuId": {
   "Description": "Organizational Unit ID for stage",
   "Value": {
    "Fn::GetAtt": [
     "STAGEOu",
     "Id"
    ]
   }
  },
  "prodOuId": {
   "Description": "Organizational Unit ID for prod",
   "Value": {
    "Fn::GetAtt": [
     "PRODOu",
     "Id"
    ]
   }
  }
 },
 "Parameters": {
  "BootstrapVersion": {
   "Type": "AWS::SSM::Parameter::Value<String>",
   "Default": "/cdk-bootstrap/hnb659fds/version",
   "Description": "Version of the CDK Bootstrap resources in this environment, automatically retrieved from SSM Parameter Store. [cdk:skip]"
  }
 },
 "Rules": {
  "CheckBootstrapVersion": {
   "Assertions": [
    {
     "Assert": {
      "Fn::Not": [
       {
        "Fn::Contains": [
         [
          "1",
          "2",
          "3",
          "4",
          "5"
         ],
         {
          "Ref": "BootstrapVersion"
         }
        ]
       }
      ]
     },
     "AssertDescription": "CDK bootstrap stack version 6 required. Please run 'cdk bootstrap' with a recent version of the CDK CLI."
    }
   ]
  }
 }
}