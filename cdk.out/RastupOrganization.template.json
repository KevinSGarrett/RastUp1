{
 "Description": "Bootstrap AWS Organizations structure, guardrails, and service control policies for Rastup environments.",
 "Resources": {
  "RootOu": {
   "Type": "AWS::Organizations::OrganizationalUnit",
   "Properties": {
    "Name": "rastup",
    "ParentId": "r-root"
   },
   "Metadata": {
    "aws:cdk:path": "RastupOrganization/RootOu"
   }
  },
  "DEVOu": {
   "Type": "AWS::Organizations::OrganizationalUnit",
   "Properties": {
    "Name": "OU-DEV",
    "ParentId": {
     "Fn::GetAtt": [
      "RootOu",
      "Id"
     ]
    },
    "Tags": [
     {
      "Key": "rastup:component",
      "Value": "organizations"
     },
     {
      "Key": "rastup:environment",
      "Value": "dev"
     },
     {
      "Key": "rastup:managed-by",
      "Value": "cdk"
     }
    ]
   },
   "Metadata": {
    "aws:cdk:path": "RastupOrganization/DEVOu"
   }
  },
  "devGuardrails": {
   "Type": "AWS::Organizations::Policy",
   "Properties": {
    "Content": {
     "Version": "2012-10-17",
     "Statement": [
      {
       "Sid": "DenyLegacyAmplify",
       "Effect": "Deny",
       "Action": [
        "amplify:CreateApp",
        "amplify:CreateBranch",
        "amplify:CreateBackendEnvironment"
       ],
       "Resource": "*",
       "Condition": {
        "StringLike": {
         "aws:RequestedRegion": [
          "us-east-1"
         ]
        }
       }
      },
      {
       "Sid": "DenyWildcardIam",
       "Effect": "Deny",
       "Action": "iam:CreatePolicy",
       "Resource": "*",
       "Condition": {
        "StringEquals": {
         "aws:ResourceTag/rastup:managed-by": "cdk"
        }
       }
      }
     ]
    },
    "Description": "Guardrails for dev preventing legacy Amplify Classic and wildcard IAM.",
    "Name": "scp-dev",
    "TargetIds": [
     {
      "Fn::GetAtt": [
       "DEVOu",
       "Id"
      ]
     }
    ],
    "Type": "SERVICE_CONTROL_POLICY"
   },
   "Metadata": {
    "aws:cdk:path": "RastupOrganization/devGuardrails"
   }
  },
  "STAGEOu": {
   "Type": "AWS::Organizations::OrganizationalUnit",
   "Properties": {
    "Name": "OU-STAGE",
    "ParentId": {
     "Fn::GetAtt": [
      "RootOu",
      "Id"
     ]
    },
    "Tags": [
     {
      "Key": "rastup:component",
      "Value": "organizations"
     },
     {
      "Key": "rastup:environment",
      "Value": "stage"
     },
     {
      "Key": "rastup:managed-by",
      "Value": "cdk"
     }
    ]
   },
   "Metadata": {
    "aws:cdk:path": "RastupOrganization/STAGEOu"
   }
  },
  "stageGuardrails": {
   "Type": "AWS::Organizations::Policy",
   "Properties": {
    "Content": {
     "Version": "2012-10-17",
     "Statement": [
      {
       "Sid": "DenyLegacyAmplify",
       "Effect": "Deny",
       "Action": [
        "amplify:CreateApp",
        "amplify:CreateBranch",
        "amplify:CreateBackendEnvironment"
       ],
       "Resource": "*",
       "Condition": {
        "StringLike": {
         "aws:RequestedRegion": [
          "us-east-1"
         ]
        }
       }
      },
      {
       "Sid": "DenyWildcardIam",
       "Effect": "Deny",
       "Action": "iam:CreatePolicy",
       "Resource": "*",
       "Condition": {
        "StringEquals": {
         "aws:ResourceTag/rastup:managed-by": "cdk"
        }
       }
      }
     ]
    },
    "Description": "Guardrails for stage preventing legacy Amplify Classic and wildcard IAM.",
    "Name": "scp-stage",
    "TargetIds": [
     {
      "Fn::GetAtt": [
       "STAGEOu",
       "Id"
      ]
     }
    ],
    "Type": "SERVICE_CONTROL_POLICY"
   },
   "Metadata": {
    "aws:cdk:path": "RastupOrganization/stageGuardrails"
   }
  },
  "PRODOu": {
   "Type": "AWS::Organizations::OrganizationalUnit",
   "Properties": {
    "Name": "OU-PROD",
    "ParentId": {
     "Fn::GetAtt": [
      "RootOu",
      "Id"
     ]
    },
    "Tags": [
     {
      "Key": "rastup:component",
      "Value": "organizations"
     },
     {
      "Key": "rastup:environment",
      "Value": "prod"
     },
     {
      "Key": "rastup:managed-by",
      "Value": "cdk"
     }
    ]
   },
   "Metadata": {
    "aws:cdk:path": "RastupOrganization/PRODOu"
   }
  },
  "prodGuardrails": {
   "Type": "AWS::Organizations::Policy",
   "Properties": {
    "Content": {
     "Version": "2012-10-17",
     "Statement": [
      {
       "Sid": "DenyLegacyAmplify",
       "Effect": "Deny",
       "Action": [
        "amplify:CreateApp",
        "amplify:CreateBranch",
        "amplify:CreateBackendEnvironment"
       ],
       "Resource": "*",
       "Condition": {
        "StringLike": {
         "aws:RequestedRegion": [
          "us-east-1"
         ]
        }
       }
