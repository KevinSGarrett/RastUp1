{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.rastup.internal/events/auth.session.created.v1.schema.json",
  "title": "auth.session.created",
  "description": "Emitted when the platform issues a fresh authenticated session.",
  "type": "object",
  "properties": {
    "event": { "const": "auth.session.created" },
    "version": { "const": 1 },
    "occurred_at": { "type": "string", "format": "date-time" },
    "emitted_at": { "type": "string", "format": "date-time" },
    "source": { "type": "string", "minLength": 3, "maxLength": 120 },
    "privacy_tier": { "type": "string", "enum": ["restricted"] },
    "retention_class": { "type": "string", "enum": ["security_core"] },
    "pii_fields": {
      "type": "array",
      "items": { "type": "string", "pattern": "^[a-z0-9_.]+$" },
      "minItems": 1,
      "uniqueItems": true
    },
    "payload": {
      "type": "object",
      "properties": {
        "session_id": { "type": "string", "format": "uuid" },
        "user_id": { "type": "string", "format": "uuid" },
        "device_id": { "type": "string", "format": "uuid" },
        "trusted_device": { "type": "boolean" },
        "risk_score": { "type": "number", "minimum": 0, "maximum": 100 },
        "ip_address": {
          "type": ["string", "null"],
          "pattern": "^[0-9a-fA-F:.%-]+$"
        }
      },
      "required": [
        "session_id",
        "user_id",
        "device_id",
        "trusted_device",
        "risk_score"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "event",
    "version",
    "occurred_at",
    "emitted_at",
    "source",
    "privacy_tier",
    "retention_class",
    "pii_fields",
    "payload"
  ],
  "additionalProperties": false
}
