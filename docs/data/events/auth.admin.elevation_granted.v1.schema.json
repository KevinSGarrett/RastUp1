{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.rastup.internal/events/auth.admin.elevation_granted.v1.schema.json",
  "title": "auth.admin.elevation_granted",
  "description": "Emitted when an administrator obtains a just-in-time elevation token.",
  "type": "object",
  "properties": {
    "event": { "const": "auth.admin.elevation_granted" },
    "version": { "const": 1 },
    "occurred_at": { "type": "string", "format": "date-time" },
    "emitted_at": { "type": "string", "format": "date-time" },
    "source": { "type": "string", "minLength": 3, "maxLength": 120 },
    "privacy_tier": { "type": "string", "enum": ["restricted"] },
    "retention_class": { "type": "string", "enum": ["security_core"] },
    "pii_fields": {
      "type": "array",
      "items": { "type": "string", "pattern": "^[a-z0-9_.]+$" },
      "minItems": 1,
      "uniqueItems": true
    },
    "payload": {
      "type": "object",
      "properties": {
        "elevation_id": { "type": "string", "format": "uuid" },
        "user_id": { "type": "string", "format": "uuid" },
        "session_id": { "type": "string", "format": "uuid" },
        "factor_id": { "type": "string", "format": "uuid" },
        "scope": { "type": "object", "additionalProperties": true },
        "expires_at": { "type": "string", "format": "date-time" },
        "reason": { "type": ["string", "null"], "maxLength": 160 }
      },
      "required": [
        "elevation_id",
        "user_id",
        "session_id",
        "factor_id",
        "scope",
        "expires_at"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "event",
    "version",
    "occurred_at",
    "emitted_at",
    "source",
    "privacy_tier",
    "retention_class",
    "pii_fields",
    "payload"
  ],
  "additionalProperties": false
}
