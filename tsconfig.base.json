{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@services/*": ["services/*"],
      "@tools/*": ["tools/*"],
      "@web/*": ["web/*"]
    }
  },
  "include": [
    "services/**/*.ts",
    "tools/**/*.ts",
    "web/**/*.ts",
    "web/**/*.tsx"
  ]
}
